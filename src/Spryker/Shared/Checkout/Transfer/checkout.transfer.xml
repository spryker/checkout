<?xml version="1.0"?>
<transfers xmlns="http://xsd.spryker.com"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://xsd.spryker.com ../../src/Spryker/TransferObjectDefinitionSchema.xsd">

    <transfer name="Order">
        <property name="idSalesOrder" type="int" />
        <property name="items" type="Item[]"  singular="item" />
        <property name="customer" type="Customer" />
        <property name="totals" type="Totals" />
        <property name="expenses" type="Expense[]" singular="expense" />
        <property name="billingAddresses" type="Address[]" singular="billingAddress" />
        <property name="shippingAddresses" type="Address[]" singular="shippingAddress" />
        <property name="process" type="string" />
    </transfer>

    <transfer name="CheckoutError">
        <property name="errorCode" type="int" />
        <property name="message" type="string" />
        <property name="step" type="string" />
        <property name="trace" type="string" />
        <property name="type" type="string" />
    </transfer>

    <transfer name="CheckoutResponse">
        <property name="isSuccess" type="bool" />
        <property name="errors" type="CheckoutError[]" singular="error" />
        <property name="isExternalRedirect" type="bool" />
        <property name="redirectUrl" type="string" />
        <property name="order" type="Order" />
    </transfer>

    <transfer name="Comment">
        <property name="idSalesOrderComment" type="int" />
        <property name="message" type="string" />
        <property name="username" type="string" />
        <property name="fkSalesOrder" type="int" />
        <property name="createdAt" type="string" />
        <property name="updatedAt" type="string" />
    </transfer>

    <transfer name="Item">
        <property name="idSalesOrderItem" type="int" />
        <property name="sku" type="string" />
        <property name="unitGrossPrice" type="int" />
        <property name="sumGrossPrice" type="int" />
        <property name="quantity" type="int" />
    </transfer>

    <transfer name="Address">
        <property name="firstName" type="string" />
        <property name="lastName" type="string" />
        <property name="address1" type="string" />
        <property name="address2" type="string" />
        <property name="address3" type="string" />
        <property name="company" type="string" />
        <property name="city" type="string" />
        <property name="zipCode" type="string" />
        <property name="state" type="string" />
        <property name="iso2Code" type="string" />
    </transfer>

    <transfer name="CheckoutRequest">
        <property name="isGuest" type="bool" />
        <property name="idUser" type="int" />
        <property name="email" type="string" />
        <property name="customerPassword" type="string" />
        <property name="billingAddress" type="Address" />
        <property name="shippingAddress" type="Address" />
        <property name="paymentMethod" type="string" />
        <property name="cart" type="Cart" />
    </transfer>

    <transfer name="ProductOption">
        <property name="idSalesOrderItemOption" type="int" />
        <property name="unitGrossPrice" type="int" />
        <property name="sumGrossPrice" type="int" />
    </transfer>

    <transfer name="Expense">
        <property name="idSalesExpense" type="int" />
    </transfer>

    <transfer name="Quote">
        <property name="items" type="Item[]" singular="item"/>
        <property name="totals" type="Totals" />
        <property name="expenses" type="Expense[]" singular="expense"/>
        <property name="billingAddress" type="Address"/>
        <property name="shippingAddress" type="Address"/>
        <property name="customer" type="Customer" />
        <property name="checkout" type="Checkout" />
    </transfer>

    <transfer name="CheckoutTransfer">
        <property name="orderPlaced" type="bool" />
    </transfer>

</transfers>

